Questão 1
#include <stdio.h>
#include <stdlib.h>

int main()
{
    float x,y,z,w,j,k,b,c;
    printf("digite quanto cada amigo deu");
    scanf("%f %f %f",&x,&y,&z);
    printf("digite a premiacao");
    scanf("%f",&j);
    w=x+y+z;
    k=(j*x)/w;
    b=(j*y)/w;
    c=(j*z)/w;
    printf("a premiação de cada um eh:\n %f para o primeiro \n %f para o segundo \n %f para o terceiro:",k,b,c);
    return 0;
}
Questão 2
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int x,y,z;

    printf("digite os pontos:");
    scanf("%d %d",&x,&y);
    z=sqrt((x*x)+(y*y));
    printf("a distancia de 0,0 eh: %d",z);

}
Questão 3
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int x,y,z,w,k=0;
    printf("digite o numero binario 1 por 1, com o primeiro sendo o numero do 1o bit:");
    scanf("%d %d %d %d",&x,&y,&z,&w);
    k = ((pow(2,3)*x)+(pow(2,2)*y)+(pow(2,1)*z)+(pow(2,0)*w));


    printf("o numero em decimal eh:%d",k);

}
Questão 4
#include <stdio.h>
#include <stdlib.h>

int main()
{
    float x,y,z;
    printf("digite seu peso");
    scanf("%f", &x);
    printf("digite sua altura");
    scanf("%f", &y);
    z=(x/(y*y));
    printf("%f",z);
    
        if (z <18.5)
    printf("Magreza");
    else if((18.5<=z) && (z<24.9))
            printf("saudavel");
         else if ((30.0<=z) && (z<34.9))
                  printf("obesidade grau 1");
              else if ((35<=z) && (z<39.9))
                       printf("obesidade grau 2");
                   else
                        printf("obesidade grau 3");
    

}
Questão 5
#include <stdio.h>
#include <stdlib.h>

int main(){
    int n, i, j, c= 0;
    printf("digite o numero de linhas do triangulo de floyd");
    scanf("%d",&n);
    for(i=1; i<=n; i++){
        for(j=1; j<= i; j++){
        c++;
        printf("%d ",c);
        }
        printf("\n");
    }
}
Questão 6
#include <stdio.h>
#include <stdlib.h>

#include<stdio.h>

int fat, n;

int main()
{
  scanf("%d", &n) ;

  for(fat = 1; n > 1; n = n - 1)
  {
      fat = fat * n;
  }

  printf("\n%d", fat);
  return 0;
}
Questão 8
void calcular(int *vetor, int n, float *m, float *dp){
    int i;
    *m = 0.0;
    for(i=0; i<n; i++){
        *m = *m +vetor[i];
    }

    *m = *m/n;
    *dp = 0.0;
    for(i=0; i<n; i++){
        *dp = *dp + pow(vetor[i] - *m,2);
    }

    *dp = sqrt(*dp/(n-1));
}
int main(){
    int c,v[5];
    float media, desvio;
    for(c=0; c<5; c++){
        printf("digite 5 numeros um a um a ser inseridos no vetor");
        scanf("%d", &v[c]);
    }
    calcular(v,5,&media,&desvio);
    printf("%f essa eh a media\n%f esse eh o desvio padrao\n",media,desvio);
}
Questão 9
#include <stdio.h>
#include <stdlib.h>

int main(){
    
    int i;
    char nome[20];
    printf("digite o nome que quer converter para maiusculo:");
    scanf("%s",nome);
    
    for(i=0; nome[i] != '\0'; i++){
        if(nome[i] >=97 && nome[i]<= 122)
        nome[i] = nome[i] - 32;
    }
    
    printf("%s", nome);
}
